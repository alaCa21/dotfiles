installpopcorntime(){
wget -c https://aur.archlinux.org/packages/po/popcorntime-bin/popcorntime-bin.tar.gz
tar zxvf popcorntime-bin.tar.gz && cd popcorntime-bin
makepkg -si
} && installpopcorntime

