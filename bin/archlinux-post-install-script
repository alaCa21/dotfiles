installxfceterminal(){
		#light terminal with transparency support
		pm i extra/xfce4-terminal
		sed -i.backup '/MiscMenubarDefault/s/TRUE$/FALSE/g' ~/.config/xfce4/terminal/terminalrc
} && installxfceterminal


