# testa se está logado como root
if [ "$(id -u)" != "0" ]; then
	echo "  Need be root"
	sleep 2
	exit  1
fi

# how install lsb_release
# wget -c https://www.archlinux.org/packages/community/any/lsb-release/download/ && pacman -U $_

admintools () {
	pacman -Syu gparted nmap arp-scan unetbootin polkit-gnome curl
} && admintools

compactadores () {
	pacman -Sy zip unzip unrar p7zip
} && compactadores

graphictools () {
	pacman -Syu inkscape gimp
} && graphictools

multimedia () {
	pacman -Syu audacious audacity
} && multimedia



