# testa se está logado como root
#if [ "$(id -u)" != "0" ]; then
#	echo "  Need be root"
#	sleep 2
#	exit  1
#fi

# how install lsb_release
# wget -c https://www.archlinux.org/packages/community/any/lsb-release/download/ && pacman -U $_

# how install yaourt
# https://aur.archlinux.org/packages/yaourt/

admintools () {
	pacman -Syu gparted nmap arp-scan unetbootin polkit-gnome curl rsync sudo
	pacman -Syu openssh
} && admintools

basesystem () {
	pacman -Syu dbus acpi acpid
} && basesystem

compactadores () {
	pacman -Sy zip unzip unrar p7zip
} && compactadores

graphictools () {
	pacman -Syu inkscape gimp
	yaourt -S --noconfirm gloobus-sushi-bzr
} && graphictools

multimedia () {
	pacman -S --noconfirm audacious audacity
	pacman -S --noconfirm gedit-plugins pulseaudio-gnome gnome-tweak-tool telepathy deja-dup
	pacman -S --noconfirm rhythmbox
	yaourt -S --noconfirm codecs
} && multimedia


