# sources:
# https://codegists.com/code/fasd/
# http://www.inmotionhosting.com/support/website/ssh/speed-up-grep-searches-with-lc-all
function add_locale() {
    if [[ -z "$($GREP __LC_CTYPE $RC)" ]]; then
        cat >>$RC <<HERE

        # __LC_CTYPE
        export LC_CTYPE=\$LANG
HERE
    fi
}


